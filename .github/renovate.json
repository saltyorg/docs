{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":semanticCommits",
        ":separateMajorReleases",
        ":ignoreUnstable"
    ],
    "prConcurrentLimit": 0,
    "prHourlyLimit": 0,
    "ansible": {
        "enabled": false
    },
    "labels": [
        "dependencies"
    ],
    "packageRules": [
        {
            "description": "Group all major pip requirements updates",
            "matchManagers": [
                "pip_requirements"
            ],
            "matchFileNames": [
                "requirements.txt"
            ],
            "groupName": "requirements (major)",
            "matchUpdateTypes": [
                "major"
            ],
            "labels": [
                "dependencies",
                "pip",
                "major"
            ]
        },
        {
            "description": "Saltbox Docs requirements",
            "matchManagers": [
                "pip_requirements"
            ],
            "matchFileNames": [
                "requirements.txt"
            ],
            "groupName": "requirements-saltbox-docs",
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "labels": [
                "dependencies",
                "pip",
                "saltbox"
            ]
        },
        {
            "description": "Major GitHub Actions updates",
            "matchManagers": [
                "github-actions"
            ],
            "groupName": "github-actions (major)",
            "matchUpdateTypes": [
                "major"
            ],
            "labels": [
                "dependencies",
                "github-actions",
                "major"
            ]
        },
        {
            "description": "Minor/patch GitHub Actions updates",
            "matchManagers": [
                "github-actions"
            ],
            "groupName": "github-actions",
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "labels": [
                "dependencies",
                "github-actions"
            ]
        }
    ],
    "rebaseWhen": "conflicted",
    "vulnerabilityAlerts": {
        "enabled": true,
        "addLabels": [
            "security",
            "vulnerability"
        ]
    },
    "commitMessageAction": "Update",
    "commitMessageTopic": "{{depName}}",
    "commitMessageExtra": "to {{newVersion}}",
    "prBodyTemplate": "{{{header}}}{{{table}}}{{{notes}}}{{{changelogs}}}{{{configDescription}}}{{{controls}}}{{{footer}}}",
    "lockFileMaintenance": {
        "enabled": true
    }
}
